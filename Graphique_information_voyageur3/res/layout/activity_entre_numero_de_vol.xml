<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <Button
        android:id="@+id/buttonValierCodeBillet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:text="@string/buttonValierCodeBilletText" />

    <EditText
        android:id="@+id/editTextCodeBillet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/buttonValierCodeBillet"
        android:layout_alignBottom="@+id/buttonValierCodeBillet"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@+id/buttonValierCodeBillet"
        android:ems="10"
        android:hint="@string/editTextCodeBillet_hint" />

    <ImageView
        android:id="@+id/imageViewLogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/logo_insset_projet" />

</RelativeLayout>
